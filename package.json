{
  "name": "elec_test4",
  "version": "1.0.0",
  "description": "Cogniterm",
  "author": "Dinith <dinitharrow132@gmail.com>",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc && electron-builder",
    "watch": "tsc -w",
    "dev": "concurrently \"npm run watch\" \"npm run electron\"",
    "electron": "electronmon ./dist/main.js",
    "start": "electron ./dist/main.js",
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "type": "commonjs",
  "dependencies": {
    "ansi-to-html": "^0.7.2",
    "ansi-up": "^1.0.0",
    "fancy-ansi": "^0.1.3",
    "mathjs": "^14.7.0",
    "xterm": "^5.3.0"
  },
  "devDependencies": {
    "@electron/remote": "^2.1.3",
    "@types/mathjs": "^9.4.2",
    "@types/node": "^24.3.0",
    "@types/xterm": "^3.0.0",
    "concurrently": "^9.2.1",
    "electron": "^37.3.1",
    "electron-builder": "^24.13.3",
    "electronmon": "^2.0.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "build": {
    "appId": "com.dinith.cogniterm",
    "productName": "Cogniterm",
    "directories": {
      "output": "dist_build"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "icon": "assets/icon.png",
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}

